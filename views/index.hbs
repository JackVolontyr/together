{{!-- HOME --}}
<h1 class="h4">{{ title }}</h1>

<div class="row" data-proposals="">
	{{#if allProposals.length }}
		{{#each allProposals}}
			<div class="col s6 m6">
				<div class="card blue-grey darken-3">
					<div class="card-content white-text">
						<span>{{userId.firstName}} {{userId.lastName}}</span>
						<span class="card-title">> {{title}}</span>
						<p class="flow-text">{{comment}}</p>
					</div>
					<div class="card-action flex">
						<a href="/proposals/{{_id}}">Show</a>
						{{#if isAuthor }}
							<a href="/proposals/{{_id}}/edit?allow=true">Edit</a>
							<form action="/proposals/{{_id}}/delete" method="post">
								<input type="hidden" name="_csrf" value="{{@root.csrf}}">

								<button class="btn waves-effect waves-light flex red" type="submit" name="action">
									<i class="material-icons delete">delete</i>
								</button>
							</form>
						{{/if}}
					</div>
				</div>
			</div>
		{{/each}}

	{{else}}
		<a class="waves-effect waves-light btn-large m-t-2" href="/proposals">Add Proposal!</a>
	{{/if}}
</div>