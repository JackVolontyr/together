<h1 class="h4">Edit user</h1>

<div class="row">
	<form enctype="multipart/form-data" action="/users/{{ user._id }}/update" method="POST" class="col s12">
		<input type="hidden" name="_csrf" value="{{csrf}}">

		{{#if userAlerts.length }}
			{{#each userAlerts}}
				<p class="info info--error m-b-1">{{this}}</p>
			{{/each}}
		{{/if}}

		<div class="file-field input-field">
			<div class="btn">
				<span>Avatar</span>
				<input type="file" name="avatarUrl">
			</div>
			<div class="file-path-wrapper">
				<input class="file-path validate" type="text">
			</div>
		</div>

		<div class="row">
			<div class="input-field col s6">
				<input placeholder="" id="firstName" name="firstName" type="text" class="validate" 
					value="{{user.firstName}}"
					required>
				<label for="firstName">First Name</label>
				<span class="helper-text" data-error="Can`t be empty!" data-success="Well!"></span>
			</div>
		
			<div class="input-field col s6">
				<input placeholder="" id="lastName" name="lastName" type="text" class="validate" 
					value="{{user.lastName}}" 
					required>
				<label for="lastName">Last Name</label>
				<span class="helper-text" data-error="Can`t be empty!" data-success="Well!"></span>
			</div>
		</div>

		<div class="row">
			<div class="input-field col s12">
				<textarea 
					id="bio" 
					name="bio" 
					class="materialize-textarea" >{{user.bio}}</textarea>
				<label for="bio">Your bio</label>
				<span class="helper-text" data-error="Can`t be empty!" data-success="Well!"></span>
			</div>
		</div>

		<button class="btn waves-effect waves-light" type="submit" name="action">Submit
			<i class="material-icons right">send</i>
		</button>
	</form>
</div>