<h2 class="h5 m-t-2 m-b-3">Log in:</h2>

<div class="row">
	<form action="{{ action }}" method="POST" class="col s12">
		<input type="hidden" name="_csrf" value="{{csrf}}">

		{{> alerts alerts=loginAlerts }}
		{{> alertsSuccess alerts=successLoginAlerts }}

		{{> email prefix='login_' }}
		{{> password prefix='login_' }}

		<button class="btn waves-effect waves-light" type="submit" name="action">Submit
			<i class="material-icons right">send</i>
		</button>
	</form>
</div>

<div class="row">
	<div class="col s12">
		<a href="/login/reset-password">Forgot your password?</a>
	</div>
</div>